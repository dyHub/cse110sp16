<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs110.lit.adventour">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs110.lit.adventour.LoginActivity" />

                android:name="com.cs110.lit.adventour.MapsActivity"
                android:label="@string/title_activity_map">
        </activity>

        <!--added by Liz for TakeTour-->
        <activity android:name="com.cs110.lit.adventour.TakeTourActivity"
            android:label="@string/title_activity_map">

        </activity>

        <!-- Browse View -->
        <activity

            android:name=".BrowseViewActivity"
            android:label="@string/app_name">
        </activity>

        <!-- Search results activity -->
        <activity android:name=".SearchResultsActivity"
            android:parentActivityName=".BrowseViewActivity" >
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs110.lit.adventour.LoginActivity" />
        </activity>
        <activity
            android:name="com.cs110.lit.adventour.OverviewActivity"
            android:label="@string/text_content"
            android:parentActivityName=".BrowseViewActivity" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCsagHwPQQtPmot7WpLY9x7uv5tD4YBa44" />

        <activity android:name=".StartTourActivity"></activity>
    </application>

</manifest>